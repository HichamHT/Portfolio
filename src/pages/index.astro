---
// src/pages/index.astro
import HichamAnimation from '../components/HichamAnimation.astro';
import '../styles/global.css';

// Si no tienes layout, puedes crear uno simple aquí
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hicham H.T. - Full Stack Developer</title>
  <!-- Preconectar para mejorar rendimiento -->
  <link rel="preconnect" href="https://cdn.prod.website-files.com">
  <link rel="preconnect" href="https://cdn.jsdelivr.net">
</head>
<body>
  <!-- Componente de animación -->
  <HichamAnimation name="Hicham" />
  
  <!-- Contenido principal (se mostrará después de la animación) -->
  <main id="main-content" style="opacity: 0; transition: opacity 0.5s ease;">
    <section id="projects" style="padding: 2rem; min-height: 100vh; background: #f4f4f4; color: #201d1d;">
      <h1>Proyectos</h1>
      <p>Aquí van tus proyectos...</p>
    </section>
    
    <section id="about" style="padding: 2rem; min-height: 100vh; background: #eaeaea; color: #201d1d;">
      <h2>Sobre Mí</h2>
      <p>Información sobre ti...</p>
    </section>
    
    <section id="contact" style="padding: 2rem; min-height: 100vh; background: #f4f4f4; color: #201d1d;">
      <h2>Contacto</h2>
      <p>Información de contacto...</p>
    </section>
  </main>

  <!-- Script para mostrar contenido después de la animación -->
  <script>
    // Esperar a que la animación termine (aproximadamente 6 segundos)
    setTimeout(() => {
      const mainContent = document.getElementById('main-content');
      if (mainContent) {
        mainContent.style.opacity = '1';
      }
    }, 6000);
  </script>
</body>
</html>