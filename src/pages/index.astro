---
import HichamAnimation from "../components/HichamAnimation.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hicham H.T. - Full Stack Developer</title>
  </head>
  <body class="bg-gray-100 overflow-x-hidden">
    <HichamAnimation name="Hicham" />

    <main
      id="main-content"
      class="opacity-0 invisible transition-all duration-1000 ease-in-out p-4 md:p-10 space-y-12"
    >
      <div class="section-card">
        <section id="knowledge" class="knowledge-container">
          <h2 class="knowledge-title">CONOCIMIENTOS</h2>

          <div class="stacking-cards">
            <div class="card-pin" style="--index: 1;">
              <div class="card-content">
                <div class="card-header">
                  <span class="card-num">(01)</span>
                  <h3 class="card-h3">Full-Stack Development</h3>
                </div>
                <div class="card-body-content">
                  <p class="card-text">From frontend interactions to backend APIs...</p>
                  <ul class="card-list">
                    <li>React, Node.js, Express.js</li>
                    <li>REST APIs, Firebase, Docker</li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="card-pin" style="--index: 2;">
              <div class="card-content">
                <div class="card-header">
                  <span class="card-num">(02)</span>
                  <h3 class="card-h3">UI/UX & Frontend</h3>
                </div>
                <div class="card-body-content">
                  <p class="card-text">Design is more than looks — it’s about clarity and connection.</p>
                  <ul class="card-list">
                    <li>NextJs, TailwindCSS, GSAP</li>
                    <li>Figma to Code</li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="card-pin" style="--index: 3;">
              <div class="card-content">
                <div class="card-header">
                  <span class="card-num">(03)</span>
                  <h3 class="card-h3">Optimization</h3>
                </div>
                <div class="card-body-content">
                  <p class="card-text">Turning complex raw inputs into reliable, usable systems.</p>
                  <ul class="card-list">
                    <li>Data Structures & Algorithms</li>
                    <li>DBMS, OOP, OS Fundamentals</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </section>

        <section 
          id="projects" 
          style="position: relative; z-index: 100; background: black; margin-top: 0; padding-top: 15vh; min-height: 100vh;"
        > 
          <h1>Proyectos</h1>
          <p>Aquí van tus proyectos...</p>
        </section>

        <section id="about" style="padding: 2rem; min-height: 100vh; background: black; color: #f4f4f4;">
          <h2>Sobre Mí</h2>
          <p>Información sobre ti...</p>
        </section>

        <section id="contact" style="padding: 2rem; min-height: 100vh; background: black; color: #f4f4f4;">
          <h2>Contacto</h2>
          <p>Información de contacto...</p>
        </section>
      </div>
    </main>

    <script>
      import Lenis from "lenis";

      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        smoothWheel: true,
      });

      function raf(time: number) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);

      lenis.stop();

      setTimeout(() => {
        const mainContent = document.getElementById("main-content");
        if (mainContent) {
          mainContent.classList.remove("opacity-0", "invisible");
          mainContent.classList.add("opacity-100");
          lenis.start();
          document.body.classList.remove("overflow-hidden");
        }
      }, 6500);

      lenis.on("scroll", ({ scroll }: { scroll: number }) => {
        const header = document.querySelector(".hicham-header") as HTMLElement;
        if (!header) return;
        const windowHeight = window.innerHeight;
        const opacity = 1 - scroll / (windowHeight * 0.8);
        const scale = 1 - scroll / 5000;

        if (opacity >= 0) {
          header.style.opacity = opacity.toString();
          header.style.transform = `scale(${scale})`;
        } else {
          header.style.opacity = "0";
        }
      });
    </script>
  </body>
</html>
