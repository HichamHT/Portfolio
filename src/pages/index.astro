---
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Portfolio</title>
</head>

<body>
	<header class="absolute top-0 z-40 w-full">
		<div class="p-6 flex justify-between items-center w-full">
		<div class="font-medium uppercase tracking-wider text-sm">
			<span>
				Desarrollador Web
			</span>
		</div>

		<nav>
            <ul class="flex gap-6 text-sm font-medium">
                <li>
					<a class="group relative block h-fit  overflow-hidden font-medium cursor-pointer select-none" href="/#SobreMi">
						<span class="block w-full transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-0 group-hover:-translate-y-full">Sobre mí</span>
						<span aria-hidden="true" class="absolute top-0 left-0 w-full block transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-full group-hover:translate-y-0">Sobre mí</span>
					</a>
				</li>
				<li>
					<a class="group relative block h-fit  overflow-hidden font-medium cursor-pointer select-none" href="/#Proyectos">
						<span class="block w-full transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-0 group-hover:-translate-y-full">Proyectos</span>
						<span aria-hidden="true" class="absolute top-0 left-0 w-full block transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-full group-hover:translate-y-0">Proyectos</span>
					</a>
				</li>
				<li>
					<a class="group relative block h-fit  overflow-hidden font-medium cursor-pointer select-none" href="/#Contacto">
						<span class="block w-full transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-0 group-hover:-translate-y-full">Contacto</span>
						<span aria-hidden="true" class="absolute top-0 left-0 w-full block transition-transform duration-[0.4s] ease-[cubic-bezier(.51,.92,.24,1.15)] translate-y-full group-hover:translate-y-0">Contacto</span>
					</a>
				</li>

            </ul>
		</nav>
		</div>
	</header>
</body>
</html>
